  <div class="row">
    
    <div class="col-md-4">
      <button type="button" class="btn btn-primary btn-sm">
        Total Calories Burned:
        <span class="badge"> <%= @user_calories %> </span>
      </button>
    </div>  

    <div class="col-md-1"></div>
  
    <div>
      <button type="button" class="btn btn-primary btn-sm">
        Total Workout Minutes:
        <span class="badge"> <%= @user_minutes %> </span>
      </button>
    </div> 
  
  </div>
  <br>
  <table class="table-bordered table-striped">
      <thead>
        <tr>

          <% if scope == "to-date" %> 
            <th>
              <h5 class="label label-primary">Workout Date</h5>
            </th>
          <% end %>

          <th>
            <h5 class="label label-primary">Workout Name</h5>
          </th>
          <th>
            <h5 class="label label-primary">Calories</h5>
          </th>
          <th>
            <h5 class="label label-primary">Duration(Mins)</h5>
          </th>
          <th>
            <h5 class="label label-primary">Intensity</h5>
          </th>
          <th>
            <h5 class="label label-primary">Remove Workout
            </h5>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @user_activities.each do |user_activity| %>

          <tr>
            <% if scope == "to-date" %> 
              <td>
                <%= user_activity.created_at.strftime("%b, %d %Y") %> 
              </td>
            <% end %>
            <td>
              <%= user_activity.activity.name %>
            </td>  
            <td> 
              <%= user_activity.calories %>
            </td>
            <td> 
              <%= user_activity.duration_minutes %>
            </td>  
            <td> 
              <%= user_activity.intensity %>
            </td>
            <td>
              <%= link_to "Remove", 
                          user_activity_path(user_activity.id),
                          method: :delete,
                          class: "btn btn-warning btn-xs" %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    <table>

    <br> 

    <div class="row nav-paths">
      <div class="col-md-4"> 
        <% if scope == "to-date" %> 
           <%= link_to "Show/Log workout for today", 
                       new_user_activity_path,
                       class: "btn btn-info btn-xs" %>
        <% else %>
          <%= link_to "Show all workouts to date", 
                      user_activities_path,
                     class: "btn btn-info btn-xs" %>
        <% end %>
      </div>
      <div class="col-md-4">
        <%= link_to "Back to dashboard", 
                     dashboard_index_path,
                     class: "btn btn-info btn-xs" %>
      </div>
    </div>  