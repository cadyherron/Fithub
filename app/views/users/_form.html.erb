<%= simple_form_for(@user) do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.input :first_name %>
    </div>
    <div class="col-sm-6">
      <%= f.input :last_name %>
    </div>
  </div>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit %>
<% end %>
