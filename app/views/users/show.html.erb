<%= image_tag @user.avatar.url(:thumb) if @user.avatar %>

<p>
  <strong>Username:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Lifetime Calories Eaten</strong>
  <%= @user.total_calories %>
</p>

<p>
  <strong>Lifetime Calories Burned</strong>
  <%= @user.total_calories_burned %>
</p>

<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %> | <% end %>
<%= link_to 'Back', dashboard_index_path %>
