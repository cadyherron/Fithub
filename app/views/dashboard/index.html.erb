<div class="container">
  <div class="row">
    <div class="col-sm-3 text-center">
      <%= render partial: "/shared/avatar" %>
      <h3>Welcome, <%= current_user.first_name %>!</h3>
      <%= link_to "Edit Profile", edit_user_path(current_user) %>
    </div>


  <div class="col-sm-9">
    <div class="col-sm-4 spacer">

      <%= button_to "Add a new meal", new_meal_path, method: :get, class: "btn btn-default btn-xl btn-block" %>
    </div>

    <div class="col-sm-4 spacer">
      <%= button_to "Add a new workout", new_user_activity_path, class: "btn btn-default btn-xl btn-block", method: :get %>
    </div>


    <div class="col-sm-4 spacer">
      <%= button_to "Add a new goal", new_goal_path, class: "btn btn-default btn-xl btn-block", method: :get  %>
    </div>
  </div> <!-- new buttons -->


</div> <!-- row -->

<br>


<%= render partial: "recent_activities" %>
<hr>

<%= render partial: "user_statistics" %>
<hr>

<%= render partial: "all_user_statistics" %>


</div> <!-- container -->
