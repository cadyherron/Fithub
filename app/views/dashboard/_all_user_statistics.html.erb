            <%= Food.sum(:calories) %> Calories
          </div>
        </div>
      </div>


      <div class='col-sm-4'>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Lead Goal Crushers</h3>
          </div>
          <div class="panel-body">
            <ol>
              <li>Deepa</li>
              <li>John</li>
              <li>Kit</li>
              <li>Thomas</li>
              <li>Julia</li>
            </ol>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

