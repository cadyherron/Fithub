      <div class='col-sm-4'>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Calories Burned Today:</h3>
          </div>
          <div class="panel-body">
            <%= UserActivity.sum(:calories) %> Calories
          </div>
        </div>

      </div>


      <div class='col-sm-4'>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Calories Eaten Today:</h3>
