<h1 class='page-header'><%= @meal.meal_type %></h1>

<div class="row">
  <div class="col-sm-6">
    <%= form_tag search_meal_foods_path(@meal), method: :get, id: 'search_form' do %>
      <%= label_tag :food_search %>
      <%= text_field_tag :food_search %>
      <%= submit_tag "Search" %>
    <%end%>
  </div>

  <div class="col-sm-6">
    <strong>Total Calories: </strong><%= @meal.total_calories %>
  </div>
  
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Calories</th>
        <th>Quantity</th>
        <th>Edit</th>
        <th>Delete</th>
      </thead>
      <tbody>
        <%= render @meal.foods %>
      </tbody>
    </table>
  </div>
</div>
