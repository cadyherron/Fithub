<div class="page-header">
  <h1>New Meal</h1>
</div>

<div class= "row">
  <div class="col-sm-6 form-group">
    <%= simple_form_for @meal do |f| %>
      <p>
        <%= f.input :meal_type, collection: Meal.meal_types.keys.to_a, include_blank: false %>
      </p>
      <p>
        <%= f.button :submit %>
      </p>
    <% end %>
  </div>
</div>
